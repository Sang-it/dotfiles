#!/usr/bin/env zsh

files=(~/.vimrc ~/.tmux.conf ~/.zshrc ~/.bin ~/.config/alacritty)

for file in $files; do
	if [ $(basename "$file") = "alacritty" ]; then
		cp -r $file ~/.dotfiles/.config
	else
		cp -r $file ~/.dotfiles
	fi
done

cd ~/.dotfiles
git add .
git commit -m "chore: update dotfiles"
branch=$(git branch --show-current)
git push origin $branch
