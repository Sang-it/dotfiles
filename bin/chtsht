#!/usr/bin/env bash

selected=$(cat ~/.cht-languages ~/.cht-command | fzf)

if [[ -z $selected ]]; then
    exit 0
fi

read -p "Query: " query

query=$(echo $query | tr ' ' '+')

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    curl cht.sh/$selected/$query | less
else
    tmux neww bash -c "curl cht.sh/$selected/$query | less"
fi
