# Open Alactritty
lctrl + alt + cmd - return : open -n -a Alacritty
lctrl + alt + cmd + shift - return : open -a Arc

# Switch window focus
lctrl + alt + cmd - h : yabai -m window --focus west
lctrl + alt + cmd - j : yabai -m window --focus south
lctrl + alt + cmd - k : yabai -m window --focus north
lctrl + alt + cmd - l : yabai -m window --focus east

# Unstack a window
lctrl + alt + cmd - f : yabai -m window --toggle float; yabai -m window --toggle float

# Move and manage stacks
lctrl + alt + cmd + shift - h : yabai -m window --stack west
lctrl + alt + cmd + shift - l : yabai -m window --stack east
lctrl + alt + cmd - n : yabai -m window --focus stack.next
lctrl + alt + cmd + shift - n : yabai -m window --focus stack.prev

# Swap managed window
lctrl + alt + cmd + shift - w : yabai -m window --swap north
lctrl + alt + cmd + shift - a : yabai -m window --swap west
lctrl + alt + cmd + shift - s : yabai -m window --swap south
lctrl + alt + cmd + shift - d : yabai -m window --swap east

# Move managed window
lctrl + alt + cmd - w : yabai -m window --warp north
lctrl + alt + cmd - a : yabai -m window --warp west
lctrl + alt + cmd - s : yabai -m window --warp south
lctrl + alt + cmd - d : yabai -m window --warp east

# Balance size of windows
lctrl + alt + cmd - b : yabai -m space --balance

# Select desktop
lctrl + alt + cmd - 0x12 : yabai -m space --focus 1
lctrl + alt + cmd - 0x13 : yabai -m space --focus 2
lctrl + alt + cmd - 0x14 : yabai -m space --focus 3
lctrl + alt + cmd - 0x15 : yabai -m space --focus 4
lctrl + alt + cmd - 0x17 : yabai -m space --focus 5
lctrl + alt + cmd - 0x16 : yabai -m space --focus 6
lctrl + alt + cmd - 0x1A : yabai -m space --focus 7
lctrl + alt + cmd - 0x1C : yabai -m space --focus 8
lctrl + alt + cmd - 0x19 : yabai -m space --focus 9
lctrl + alt + cmd - 0x1D : yabai -m space --focus 10


# Send window to desktop and focus
lctrl + alt + cmd + shift - 0x12 : yabai -m window --space  1; yabai -m space --focus 1
lctrl + alt + cmd + shift - 0x13 : yabai -m window --space  2; yabai -m space --focus 2
lctrl + alt + cmd + shift - 0x14 : yabai -m window --space  3; yabai -m space --focus 3
lctrl + alt + cmd + shift - 0x15 : yabai -m window --space  4; yabai -m space --focus 4
lctrl + alt + cmd + shift - 0x17 : yabai -m window --space  5; yabai -m space --focus 5
lctrl + alt + cmd + shift - 0x16 : yabai -m window --space  6; yabai -m space --focus 6
lctrl + alt + cmd + shift - 0x1A : yabai -m window --space  7; yabai -m space --focus 7
lctrl + alt + cmd + shift - 0x1C : yabai -m window --space  8; yabai -m space --focus 8
lctrl + alt + cmd + shift - 0x19 : yabai -m window --space  9; yabai -m space --focus 9
lctrl + alt + cmd + shift - 0x1D : yabai -m window --space  10; yabai -m space --focus 10

# Create and destroy desktops
lctrl + alt + cmd - x : yabai -m space --create
lctrl + alt + cmd + shift - x : yabai -m space --destroy

# Restart Yabai
lctrl + alt + cmd - q : yabai --restart-service
